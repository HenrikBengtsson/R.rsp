<% ###################################################################
pkg <- R.rsp;

# Obtain package details
title <- sprintf("The %s package v%s", getName(pkg), getVersion(pkg));
pattern <- "^(.*)[<(](.*)[>)]";
authors <- trim(gsub(pattern, "\\1", getAuthor(pkg)));
emails <- trim(gsub(pattern, "\\2", getAuthor(pkg)));
date <- getDate(pkg);
################################################################### %>

\documentclass{article}
\usepackage{graphicx}   % Note that 'graphics' is obsolete.
